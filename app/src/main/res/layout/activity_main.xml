<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.bankapp.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Banking System Application"
        android:textColor="@color/mainText"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bank" />

    <Button android:background="@drawable/switch_btn_bg"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:id="@+id/switch_btn"
        app:layout_constraintTop_toBottomOf="@+id/page_description"
        android:textColor="@color/mainBackground"
        android:text="All Customer"
        android:textAllCaps="false"
        android:paddingEnd="32dp"
        android:paddingStart="32dp"/>

</LinearLayout>